<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/customer_border"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/lId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"
            android:fontFamily="@font/oswald_bold"
            android:padding="3dp"
            android:text="ID:"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lIdNumber"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@+id/lId"
            android:fontFamily="@font/oswald_bold"
            android:padding="3dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lStockNumber"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lType"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@+id/lStock"
            android:fontFamily="@font/oswald_bold"
            android:padding="3dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lId"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"
            android:fontFamily="@font/oswald_bold"
            android:padding="3dp"
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lType"
            android:layout_toRightOf="@+id/lStockNumber"
            android:ellipsize="end"
            android:fontFamily="@font/oswald_bold"
            android:maxLines="3"
            android:padding="3dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lType"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"
            android:fontFamily="@font/oswald_bold"
            android:padding="3dp"
            android:text="Stock: "
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lStockNumber"
            android:fontFamily="@font/game_played"
            android:maxLines="1"
            android:padding="3dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>