<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/customer_border"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="5dp"
        android:padding="3dp"
        android:text="ID:"
        android:textColor="@color/white"
        android:fontFamily="@font/oswald_bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lIdNumber"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lId"
        android:layout_marginRight="6dp"
        android:textAlignment="textEnd"
        android:padding="3dp"
        android:textColor="@color/white"
        android:fontFamily="@font/oswald_bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lId"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:fontFamily="@font/oswald_bold"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lType"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="5dp"
        android:padding="3dp"
        android:textColor="@color/white"
        android:fontFamily="@font/oswald_bold"
        android:text="Stock: "
        android:visibility="visible" />

    <TextView
        android:id="@+id/lStockNumber"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lType"
        android:layout_toRightOf="@+id/lStock"
        android:layout_marginRight="6dp"
        android:padding="3dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:fontFamily="@font/oswald_bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lStockNumber"
        android:maxLines="1"
        android:padding="3dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="@font/game_played"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lPrice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lType"
        android:layout_toRightOf="@+id/lStockNumber"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="3dp"
        android:textColor="@color/white"
        android:fontFamily="@font/oswald_bold"
        android:textAlignment="textEnd"
        android:visibility="visible" />
</RelativeLayout>