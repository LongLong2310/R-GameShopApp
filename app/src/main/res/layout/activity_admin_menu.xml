<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F334A"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="124dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:padding="15dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="227dp"
                    android:layout_marginTop="35dp">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="314dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="center_horizontal|top"
                        android:paddingRight="50dp"
                        android:text="ADMIN"
                        android:fontFamily="@font/game_played"
                        android:background="#0F334A"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="#51C5D5"
                        android:layout_marginLeft="70dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </TableRow>


            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/stock_small"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="STOCK"
                            android:fontFamily="@font/game_played"
                            android:textSize="24sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/customer_border"
                            android:textColor="@android:color/white"
                            android:layout_weight=".5"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/customer_border"
                            android:drawableTop="@drawable/account_small"
                            android:fontFamily="@font/game_played"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:scaleType="centerCrop"
                            android:text="ACCOUNTS"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:layout_weight=".5"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/customer_border"
                            android:drawableTop="@drawable/history_small"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="HISTORY"
                            android:fontFamily="@font/game_played"
                            android:textSize="24sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:scaleType="centerCrop"
                            android:textColor="@android:color/white"
                            android:layout_weight=".5"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/buttonLogout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/customer_border"
                            android:drawableTop="@drawable/logout_small"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="LOG OUT"
                            android:fontFamily="@font/game_played"
                            android:textSize="24sp"
                            android:scaleType="centerCrop"
                            android:textColor="@android:color/white"
                            android:layout_weight=".5"/>
                    </TableRow>


                </TableLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>