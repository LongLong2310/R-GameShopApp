<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".userMain">

    <TextView
        android:id="@+id/TextLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/game_played"
        android:text="R-GAMESHOP"
        android:textColor="@color/border_color"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="302dp"
        android:layout_height="55dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:fontFamily="@font/oswald_regular"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/border_color"
        android:textColorHint="@color/border_color" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="302dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:fontFamily="@font/oswald_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/border_color"
        android:textColorHint="@color/border_color" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="147dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="85dp"
        android:text="LOG IN"
        android:textSize="16sp"
        android:fontFamily="@font/oswald_regular"
        android:letterSpacing="0.1"
        android:backgroundTint="@color/border_color"
        android:textColor="@color/background_color"
        android:onClick="login"/>

    <Button
        android:id="@+id/buttonToSignUp"
        android:layout_width="147dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="SIGN UP"
        android:textSize="16sp"
        android:fontFamily="@font/oswald_regular"
        android:letterSpacing="0.1"
        app:backgroundTint="@null"
        android:background="@drawable/button_border"
        android:textColor="@color/border_color"
        android:onClick="onClickButtonToSignUp"/>

</LinearLayout>
